page {
  background: #f8f8f8;
  height: 100%;
}
.container {
  width: 100%;
  background: #f8f8f8;
  min-height: 100%;
  padding: 30rpx;
}
.my-wallet{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  width: cale(100% - 60rpx);
  height: auto;
  padding: 30rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
}
.my-wallet .my-wallet-header{
  font-size: 32rpx;
  line-height: 36rpx;
}
.my-wallet .my-wallet-num{
  font-size: 28rpx;
  line-height: 60rpx;
  font-weight: bold;
}
.my-vip{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  width: cale(100% - 60rpx);
  height: auto;
  padding: 30rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}
.my-vip .header{
  font-size: 32rpx;
  line-height: 36rpx;
}
.my-vip .time{
  font-size: 28rpx;
  line-height: 60rpx;
  font-weight: bold;
}

.my-vip-recharge{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  margin-bottom: 20rpx;
}
.my-vip-recharge .img{
  width: 50rpx;
  height: 50rpx;
  object-fit: scale-down;
}
.my-vip-recharge .recharge{
  width: 100%;
  height: auto;
  padding-left: 20rpx;
}
.my-vip-recharge .recharge .recharge-title{
  font-size: 30rpx;
  font-weight: 500;
  line-height: 44rpx;
  color: rgba(51, 51, 51, 1);
}
.my-vip-recharge .recharge .des{
  font-size: 24rpx;
  font-weight: 400;
  line-height: 34rpx;
  color: rgba(153, 153, 153, 1);
}